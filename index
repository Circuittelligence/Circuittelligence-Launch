    <!-- Optional Directus Hydration (safe) -->
    <script>
      /**
       * LAUNCH CONFIG (edit these 4)
       */
      const APPLY_URL = "mailto:info@circuittelligence.com?subject=Argonaut%20Diagnostic%20-%20Apply&body=Business%20name%3A%0AWebsite%3A%0AWhat%20do%20you%20want%20to%20automate%3A%0ABudget%20range%3A%0ATimeline%3A%0A";
      const BOOK_URL  = "mailto:info@circuittelligence.com?subject=15-min%20fit%20call&body=Best%20times%20to%20meet%3A%0ATimezone%3A%0A";
      const DIRECTUS_URL = "";                         // leave "" if not using
      const READ_TOKEN = "";                           // optional

      // Wire CTAs immediately (no dependency on Directus)
      function wireCtas() {
        const ids = ["nav-apply", "cta-apply", "cta-apply-2"];
        ids.forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.href = APPLY_URL;
        });
        const book = document.getElementById("cta-book");
        if (book) book.href = BOOK_URL;
      }

      const getUrl = (path) =>
        `${DIRECTUS_URL}${path}${READ_TOKEN ? "?access_token=" + READ_TOKEN : ""}`;
      const getAsset = (id) => (id ? `${DIRECTUS_URL}/assets/${id}` : null);

      async function hydrateFromDirectus() {
        if (!DIRECTUS_URL) return; // Directus disabled

        try {
          // Global Settings (optional)
          const globalRes = await fetch(getUrl("/items/global_settings")).catch(() => null);
          if (globalRes && globalRes.ok) {
            const { data } = await globalRes.json();
            if (data?.site_title) {
              document.title = data.site_title;
              const navTitle = document.getElementById("nav-title");
              if (navTitle) navTitle.textContent = data.site_title;
            }
            if (data?.footer_text) {
              const ft = document.getElementById("footer-text");
              if (ft) ft.innerHTML = data.footer_text;
            }
          }

          // Home Page (optional)
          const pageRes = await fetch(getUrl("/items/pages?filter[slug][_eq]=home")).catch(() => null);
          if (pageRes && pageRes.ok) {
            const { data } = await pageRes.json();
            const homePage = Array.isArray(data) && data.length ? data[0] : null;
            if (!homePage) return;

            if (homePage.title) {
              const ht = document.getElementById("hero-title");
              if (ht) ht.textContent = homePage.title; // keep simple, no HTML injection
            }

            if (homePage.content) {
              const tempDiv = document.createElement("div");
              tempDiv.innerHTML = homePage.content;
              const hs = document.getElementById("hero-subtitle");
              if (hs) hs.textContent = tempDiv.textContent || tempDiv.innerText || "";
            }

            if (homePage.hero_image) {
              const img = document.getElementById("hero-image");
              if (img) img.src = getAsset(homePage.hero_image);
            }
          }
        } catch (err) {
          // Silent failure: page must remain functional
          console.warn("Directus hydration skipped:", err);
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        wireCtas();
        hydrateFromDirectus();
      });
    </script>
  </body>
